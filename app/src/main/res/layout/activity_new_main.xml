<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/logoimage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fdfefe"
    tools:context=".NewMainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="20dp"
        android:transitionName="img_anim"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cmg" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="339dp"
        android:layout_height="111dp"
        android:fontFamily="@font/bungee"
        android:paddingStart="8dp"
        android:transitionName="Wel_Come"
        android:text="Hello there , Welcome Back"
        android:textColor="#10105c"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ar_one_sans"
        android:paddingStart="8dp"
        android:transitionName="Wel_Come01"
        android:text="Sign in to continue"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <LinearLayout
        android:layout_width="391dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:transitionName="UserIN"
            android:layout_marginVertical="5dp"
            android:hint="UserId">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/UserIn"
                style="@style/Widget.Design.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/SuperDarkBlue" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:transitionName="PhoneIN"
            android:layout_marginHorizontal="25dp"
            android:layout_marginVertical="5dp"
            android:hint="Password"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/SuperDarkBlue">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/passIn"
                style="@style/Widget.Design.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/SuperDarkBlue" />
        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/FORGOT_PASS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginBottom="5dp"
            android:background="#00000000"
            android:gravity="right"
            android:text="FORGET PASSWORD"
            android:textAlignment="gravity"
            android:textColor="@color/SuperDarkBlue"
            android:textSize="18sp" />

        <Button
            android:id="@+id/buttonLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:backgroundTint="@color/SuperDarkBlue"
            android:text="GO"
            android:textColor="@color/Cream"
            android:textColorLink="@color/Cream"
            android:textSize="24sp"
            android:transitionName="GoIn" />

        <Button
            android:id="@+id/buttonSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:background="#00000000"

            android:text="NEW USER ? SIGN UP"
            android:textColor="@color/SuperDarkBlue" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
